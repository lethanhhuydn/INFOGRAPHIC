{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "skipLibCheck": true,
    "allowJs": true,
    "isolatedModules": true,
    "noEmit": true,

    "paths": {
      "@/*": ["./*"]
    },

    "resolveJsonModule": true,
    "allowImportingTsExtensions": true
  }
}
